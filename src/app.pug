v-app
  v-navigation-drawer(app
  v-model="drawer"
  :mini-variant="mini"
  dark
  temporary)
    v-list(class="pa-1")
      v-list-tile(v-if="mini" @click.stop="mini = !mini")
        v-list-tile-action
          v-icon chevron_right
      v-list-tile(avartar v-if="isLogin" tag="div")
        v-list-tile-avatar
          img(:src="imageUrl")
        v-list-tile-content
          v-list-tile-title {{fullName}}
        v-list-tile-action
          v-btn(icon @click.stop="mini = !mini")
            v-icon chevron_right
      v-list-tile(v-else)
        v-list-tile-title(class="title") Typescript Vuex
    v-divider
    v-list(class="pa-1")
      v-list-tile(v-for="item in items"
      :key="item.title"
      @click="")
        v-list-tile-action
          v-btn(icon)
            v-icon {{item.icon}}
        v-list-tile-content
          router-link(:to="{name: item.routerName}")
            v-list-tile-title {{ item.title }}
  v-toolbar(app)
    v-toolbar-side-icon(@click="drawer = !drawer")
    v-spacer
    v-btn(icon)
      v-icon search
    v-btn(icon)
      v-icon apps
    v-btn(icon @click="login" v-if="!isLogin")
      v-icon save_alt
    v-btn(icon @click="signout" v-if="isLogin")
      v-icon exit_to_app
  v-content(app)
    v-container(fluid)
      router-view
  v-footer(app)
